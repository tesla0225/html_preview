{
  "manifest_version": 3,
  "name": "HTML Preview",
  "version": "1.0",
  "description": "Preview HTML files in a side panel",
  "permissions": ["sidePanel"],
  "action": {
    "default_popup": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
